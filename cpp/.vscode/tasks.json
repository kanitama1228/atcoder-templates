{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "bundle third party library",
      "command": "oj-bundle -I ${workspaceFolder}/_lib/ ${file} > ${fileDirname}/${fileBasenameNoExtension}.bundle.cpp",
      "group": {
        "kind": "build",
      }
    },
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "g++",
      "args": [
        "-std=gnu++17",
        "-g",
        "-Wall",
        "-Wextra",
        "-Wno-sign-compare",
        "-Werror=uninitialized",
        "-Werror=shadow",
        "-O2",
        "-DONLINE_JUDGE",
        "${fileDirname}/${fileBasenameNoExtension}.bundle.cpp",
        "-I",
        "/Library/Developer/CommandLineTools/usr/include/ac-library",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.bundle"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "hide": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "bundle third party library"
      ]
    },
    {
      "label": "CheckTestCase",
      "type": "shell",
      "command": "oj test -c ${fileDirname}/${fileBasenameNoExtension}.bundle; rm ${fileBasenameNoExtension}.bundle",
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": [
        "g++ build active file"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "shared",
      }
    },
    {
      "label": "SubmitCode",
      "type": "shell",
      "command": "acc submit -s -- -y; rm ${fileBasenameNoExtension}",
      "options": {
        "cwd": "${fileDirname}"
      },
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "shared",
      },
      "dependsOn": [
        "bundle third party library",
        "Archive Code"
      ],
    },
    {
      "label": "Archive Code",
      "type": "shell",
      "command": "mkdir -p _archive && ver=$(ls _archive/rev* | wc -l | awk '$0+=1') && cp ${file} _archive/rev${ver}.cpp",
      "options": {
        "cwd": "${fileDirname}"
      },
      "hide": false,
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared",
      },
    },
    {
      "type": "shell",
      "label": "clang++ build active file",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-stdlib=libc++",
        "-x",
        "c++",
        "-Wall",
        "-Wextra",
        "-Wno-sign-compare",
        "-Werror=uninitialized",
        "-DONLINE_JUDGE",
        "${file}",
        "-I",
        "/Library/Developer/CommandLineTools/usr/include/ac-library",
        "-I",
        "${workspaceFolder}/_lib",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "--debug"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "hide": true,
      "group": "build"
    },
  ]
}
