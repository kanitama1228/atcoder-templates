{
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "files.associations": {
    "iostream": "cpp"
  },
  "code-runner.executorMap": {
    "cpp": "cd $dir && rm $dir/$fileNameWithoutExt && clang++ -std=c++17 $fileName -o $fileNameWithoutExt && $dir/$fileNameWithoutExt",
  },
  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  "code-runner.saveFileBeforeRun": true,
  "lldb.launch.expressions": "native",
  "C_Cpp.default.cppStandard": "gnu++17",
  "C_Cpp.default.cStandard": "gnu11",
  "C_Cpp.default.macFrameworkPath": [
    "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks" // edit
  ],
  "C_Cpp.default.includePath": [
    "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include", // edit
    "/Library/Developer/CommandLineTools/usr/include/ac-library", // edit
    "${workspaceFolder}/_lib"
  ],
  "C_Cpp.default.intelliSenseMode": "clang-x86", // macOS
  "C_Cpp.default.compilerPath": "/usr/local/bin/g++",
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.files.exclude": {
    "**/.vscode": true,
    "**/.vs": true
  },
  "C_Cpp.clang_format_style": "Google",
  "C_Cpp.default.compilerArgs": [
    "-Wall",
    "-Wextra",
  ],
  "C_Cpp.codeAnalysis.runAutomatically": false,
}
